extends ../layout

block content
  .login-container.container
    .panel
      .panel-body
        if messages.error
          .alert.alert-danger(role='alert')
            for error in messages.error
              div= error.msg

        form(method='POST')
          legend Create an account
          .form-group
            label(for='name') Name
            input.form-control(type='text', name='name', id='name', placeholder='Name', autofocus=true)
          .form-group
            label(for='email') Email
            input.form-control(type='email', name='email', id='email', placeholder='Email')
          .form-group
            label(for='password') Password
            input.form-control(type='password', name='password', id='password', placeholder='Password')
          .form-group
            label(for='forme_juridique') Forme juridique
            input.form-control(type='text', name='forme_juridique', id='forme_juridique', placeholder='Forme juridique')
          .form-group
            label(for='gerant') Gérant
            input.form-control(type='text', name='gerant', id='gerant', placeholder='Gérant')
          .form-group
            label(for='coords') Coordonnées
            input.form-control(type='text', name='coords', id='coords', placeholder='Coordonnées')
          .form-group
            label(for='siret') Numéro SIRET
            input.form-control(type='text', name='siret', id='siret', placeholder='Numéro SIRET')

          .form-group
            small.text-muted By signing up, you agree to the <a href="/">Terms of Service</a>.
          button.btn.btn-success(type='submit') Create an account

        .hr-title
          span or

        .btn-toolbar.text-center

    p.text-center Already have an account?&nbsp;
      a(href='/login')
        strong Log in
